<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kstechnologies.NanoScan.com.spectrosmart.NanoScan.InfoActivity">

    <WebView
        android:layout_width="match_parent"
        android:id="@+id/web"
        android:layout_height="match_parent"></WebView>

    <ImageView
        android:id="@+id/iv_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dip16"
        android:visibility="gone"
        android:contentDescription="@string/desc_info"
        android:paddingEnd="@dimen/dip32"
        android:paddingStart="@dimen/dip32"
        android:src="@drawable/ic_info" />

    <ListView
        android:id="@+id/lv_info"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_info"/>

</RelativeLayout>
